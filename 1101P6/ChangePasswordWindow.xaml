<Window x:Class="_1101P6.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1101P6"
        mc:Ignorable="d"
        Title="Изменение пароля" Height="250" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Новый пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Подтвердите пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Сохранить" Width="100" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
