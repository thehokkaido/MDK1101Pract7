<Window x:Class="_1101P6.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1101P6"
        mc:Ignorable="d"
        Title="Редактирование сотрудника" Height="400" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Фамилия:" Margin="0,0,0,5"/>
            <TextBox x:Name="SurnameTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Имя:" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Отчество:" Margin="0,0,0,5"/>
            <TextBox x:Name="PatronymicTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Стаж:" Margin="0,0,0,5"/>
            <TextBox x:Name="ExperienceTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Должность:" Margin="0,0,0,5"/>
            <TextBox x:Name="PositionTextBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Сохранить" Width="100" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
