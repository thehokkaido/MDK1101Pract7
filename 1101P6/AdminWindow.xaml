<Window x:Class="_1101P6.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1101P6"
        mc:Ignorable="d"
        Title="Учет пользователей" Height="400" Width="800">
    <Grid>
        <DataGrid x:Name="EmployeesDataGrid" AutoGenerateColumns="True" Margin="10"/>
        <Button Content="Изменить данные" Click="EditEmployee_Click" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10"/>
        <Button Content="Изменить пароль" Click="ChangePassword_Click" Width="150" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
        <Button Content="Перейти в меню таблиц" Click="OpenMenuWindow_Click" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>
