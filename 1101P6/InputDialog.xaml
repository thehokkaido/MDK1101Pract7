<Window x:Class="_1101P6.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1101P6"
        mc:Ignorable="d"
        Title="Ввод данных" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="{Binding LabelText}" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="InputTextBox" Height="30" Margin="0,0,0,10"/>
            <Button Content="ОК" Width="80" HorizontalAlignment="Right" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
