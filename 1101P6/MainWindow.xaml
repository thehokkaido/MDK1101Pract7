<Window x:Class="_1101P6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1101P6"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин:" Margin="5"/>
            <TextBox x:Name="LoginTextBox" Width="200" Margin="5"/>
            <TextBlock Text="Пароль:" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="5"/>
            <Button Content="Войти" Click="LoginButton_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
